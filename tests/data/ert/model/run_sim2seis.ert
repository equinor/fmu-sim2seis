-- This is the ert script for testing the sim2seis workflow
DEFINE <USER> $USER

NUM_REALIZATIONS 1

-- SIM2SEIS and PEM settings
DEFINE <JOB_CONFIG_DIR> <CONFIG_PATH>/../../sim2seis/model
DEFINE <MODEL_PATH> <CONFIG_PATH>/../../sim2seis/model
DEFINE <SIM2SEIS_CONFIG_FILE_NAME> sim2seis_combined_config.yml
DEFINE <GLOBAL_PATH> ../../fmuconfig/output
DEFINE <GLOBAL_CONFIG_FILE> global_variables.yml
DEFINE <VERBOSE_OUTPUT> False
RUNPATH <CONFIG_PATH>/../..
DEFINE <OBS_PREFIX> HIST
DEFINE <MOD_PREFIX> HIST

FORWARD_MODEL OBSERVED_DATA(<CONFIG_DIR>=<JOB_CONFIG_DIR>, <CONFIG_FILE>=<SIM2SEIS_CONFIG_FILE_NAME>, <GLOBAL_DIR>=<GLOBAL_PATH>, <GLOBAL_FILE>=<GLOBAL_CONFIG_FILE>, <OBS_DATE_PREFIX>=<OBS_PREFIX>, <VERBOSE>=<VERBOSE_OUTPUT>)

FORWARD_MODEL SEISMIC_FORWARD(<CONFIG_DIR>=<JOB_CONFIG_DIR>, <CONFIG_FILE>=<SIM2SEIS_CONFIG_FILE_NAME>, <GLOBAL_DIR>=<GLOBAL_PATH>, <GLOBAL_FILE>=<GLOBAL_CONFIG_FILE>, <MODEL_DIR>=<MODEL_PATH>, <MOD_DATE_PREFIX>=<MOD_PREFIX>, <VERBOSE>=<VERBOSE_OUTPUT>)

FORWARD_MODEL RELATIVE_INVERSION(<CONFIG_DIR>=<JOB_CONFIG_DIR>, <CONFIG_FILE>=<SIM2SEIS_CONFIG_FILE_NAME>, <GLOBAL_DIR>=<GLOBAL_PATH>, <GLOBAL_FILE>=<GLOBAL_CONFIG_FILE>, <VERBOSE>=<VERBOSE_OUTPUT>)

FORWARD_MODEL MAP_ATTRIBUTES(<CONFIG_DIR>=<JOB_CONFIG_DIR>, <CONFIG_FILE>=<SIM2SEIS_CONFIG_FILE_NAME>, <GLOBAL_DIR>=<GLOBAL_PATH>, <GLOBAL_FILE>=<GLOBAL_CONFIG_FILE>, <ATTRIBUTE>=amplitude)

FORWARD_MODEL MAP_ATTRIBUTES(<CONFIG_DIR>=<JOB_CONFIG_DIR>, <CONFIG_FILE>=<SIM2SEIS_CONFIG_FILE_NAME>, <GLOBAL_DIR>=<GLOBAL_PATH>, <GLOBAL_FILE>=<GLOBAL_CONFIG_FILE>, <ATTRIBUTE>=relai)
